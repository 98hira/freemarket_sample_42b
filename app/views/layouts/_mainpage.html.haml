.main-page
  .swiper-container
    .swiper-wrapper
      .swiper-slide
        = image_tag asset_path"banner/dum01.gif",alt: "Swiper01"
      .swiper-slide
        = image_tag asset_path"dum02.gif",alt: "Swiper02"
      .swiper-slide
        = image_tag asset_path"dum04.gif",alt: "Swiper03"
    .swiper-pagination
    .swiper-button-prev
    .swiper-button-next
    :javascript
      var swiper = new Swiper('.swiper-container', {
        navigation: {
          nextEl: '.swiper-button-next',
          prevEl: '.swiper-button-prev',
        },
        loop: true,
        speed: 500,
        pagination: {
        el: '.swiper-pagination',
        type: 'bullets'
        },
        autoplay:{
        delay: 4000,
         disableOnInteraction: false
        },
      });
  .pickup-page
