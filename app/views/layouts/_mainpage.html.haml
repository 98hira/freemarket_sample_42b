.main-page
  .swiper-container
    .swiper-wrapper
      .swiper-slide
        = image_tag asset_path"banner/dum01.gif",alt: "Swiper01"
      .swiper-slide
        = image_tag asset_path"dum02.gif",alt: "Swiper02"
      .swiper-slide
        = image_tag asset_path"dum04.gif",alt: "Swiper03"
    .swiper-pagination
    .swiper-button-prev
    .swiper-button-next
    :javascript
      var swiper = new Swiper('.swiper-container', {
        navigation: {
          nextEl: '.swiper-button-next',
          prevEl: '.swiper-button-prev',
        },
        loop: true,
        speed: 500,
        pagination: {
        el: '.swiper-pagination',
        type: 'bullets'
        },
        autoplay:{
        delay: 4000,
         disableOnInteraction: false
        },
      });
  .pickup-page
    %h2.pickup-head ピックアップカテゴリー
    .main-section
      %h3.section-name メンズ 新着アイテム
      .section-item
        - @mens_category.each do |item|
          .items-box
            = link_to items_path(item.id) do
              -item.item_images.each.with_index do |image, i|
                - if i ==0
                  =image_tag image.image.url
                  .item-box-body
                    .item-box-name
                      = item.name
                    .item-box-price
                      .price-section
                        ¥
                        = number_with_delimiter(item.price)
                      .item-liks
                        =fa_icon("heart")
                        %span 10
                      %p.item-tax (税込)
      .section-all
        = link_to'すべての商品を見る',""
