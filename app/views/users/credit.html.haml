.mercari
  .mercari-header
    %h1
      = link_to "/" do
        = image_tag "logo.svg", style: "background: rgb(245, 245, 245);"

  .info-credit
    .info-credit_header
      %h2 支払い番号
    .info-credit_contents
      .info-credit_contents_form
        .info-credit_contents_form_field
          = form_with url: pay_path(@user), local: true do |f|
            %p
              カード番号　　
              %span.span-red 必須
            = f.text_field :number, maxlength: "16", placeholder: "半角数字のみ", class: "info-credit_contents_form_field_input"
            .info-credit_contents_form_field-cards
              = image_tag "visa.svg", class: "card"
              = image_tag "master-card.svg", class: "card"
              = image_tag "saison-card.svg", class: "card"
              = image_tag "jcb.svg", class: "card"
              = image_tag "american_express.svg", class: "card"
              = image_tag "dinersclub.svg", class: "card"
              = image_tag "discover.svg", class: "card"
              .info-credit_contents_form_field_date
                %p
                  有効期限　　　
                  %span.span-red 必須
                %li
                  = f.select :exp_month, class: "select-form"  do
                    %option{:value => "1"} 01
                    %option{:value => "2"} 02
                    %option{:value => "3"} 03
                    %option{:value => "4"} 04
                    %option{:value => "5"} 05
                    %option{:value => "6"} 06
                    %option{:value => "7"} 07
                    %option{:value => "8"} 08
                    %option{:value => "9"} 09
                    %option{:value => "10"} 10
                    %option{:value => "11"} 11
                    %option{:value => "12"} 12
                %li 月
                %li
                  = f.select :exp_year, class: ""  do
                    %option{:value => "2021"} 2020
                    %option{:value => "2021"} 2021
                    %option{:value => "2022"} 2022
                    %option{:value => "2023"} 2023
                    %option{:value => "2024"} 2024
                    %option{:value => "2025"} 2025
                    %option{:value => "2026"} 2026
                    %option{:value => "2027"} 2027
                    %option{:value => "2028"} 2028
                    %option{:value => "2029"} 2029
                %li 年
              %p
                セキュリティーコード
                %span.span-red 必須
              = f.text_field :cvc, placeholder: "カードの背面の４桁もしくは３桁の番号",  class:"info-credit_contents_form_field_input-content"
              %p.sentence-blue カード裏側の番号とは？
              %button.submit{type: "submit"} 次へ進む
    .mercari-footer
      %nav
        %ul
          %li プライバシーポリシー
          %li メルカリ利用規約
          %li 特定商取引に関する表記
      .mercari-footer_contents
        = link_to "/", class: "single-footer-logo" do
          = image_tag "mercari.svg", style: "background: rgb(245, 245, 245);"
        %p
          %small © 2019 Mercari
