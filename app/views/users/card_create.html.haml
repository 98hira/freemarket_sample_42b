= render "layouts/header"
%nav.bread-crumbs
  %ul
    %li{itemscope: "", itemtype: ""}
      = link_to "/" do
        %span{itemprop: "title"}
          - breadcrumb :users_card_create
          = breadcrumbs
%main.l-container.clearfix
  = form_with url:  users_credit_update_path, local: true do |f|
    .l-content
      %section.l-chapter-container-mypage-identification
        %section.buy-content
          %h2.creditcard-title クレジットカード情報入力
        %section.buy-content
        .credit-container
          .credit-content
            %label.sell-item-name
              カード番号
              %span.form-require-userid 必須
              = f.text_field :number, maxlength: "16", placeholder: "半角数字のみ",class: "sell-card-number"
              .info-creditcard_contents_form_field-cards
                = image_tag "visa.svg", class: "card"
                = image_tag "master-card.svg", class: "card"
                = image_tag "saison-card.svg", class: "card"
                = image_tag "jcb.svg", class: "card"
                = image_tag "american_express.svg", class: "card"
                = image_tag "dinersclub.svg", class: "card"
                = image_tag "discover.svg", class: "card"

        .credit-content
          %label.sell-item-name
            有効期限
            %span.form-require-userid 必須
            .card-select-wrap
              = f.select :exp_month, class: "select-expire" do
                %option{:value => "1"} 1
                %option{:value => "2"} 2
                %option{:value => "3"} 3
                %option{:value => "4"} 4
                %option{:value => "5"} 5
                %option{:value => "6"} 6
                %option{:value => "7"} 7
                %option{:value => "8"} 8
                %option{:value => "9"} 9
                %option{:value => "10"} 10
                %option{:value => "11"} 11
                %option{:value => "12"} 12
              %span.expire 月
              %h3.fas.fa-angle-down
              = f.select :exp_year, class: "select-expire" do
                %option{:value => "2019"} 2019
                %option{:value => "2020"} 2020
                %option{:value => "2021"} 2021
                %option{:value => "2022"} 2022
                %option{:value => "2023"} 2023
                %option{:value => "2024"} 2024
                %option{:value => "2025"} 2025
                %option{:value => "2026"} 2026
                %option{:value => "2027"} 2027
                %option{:value => "2028"} 2028
                %option{:value => "2029"} 2029
              %span.expire 年
              %h3.fas.fa-angle-down

        .credit-content
          %label.sell-item-name
            セキュリティコード
            %span.form-require-userid 必須
            = f.text_field :cvc, placeholder: "カードの背面の４桁もしくは３桁の番号", class: "sell-card-number" do
              %p.fas.fa-question-circle
                カード裏面の番号とは？

        .credit-content
          %button.send-creditadd-btn{method: :post, type: "submit"}
            追加する

  = render "layouts/l_sidebar"
= render "layouts/footer"
