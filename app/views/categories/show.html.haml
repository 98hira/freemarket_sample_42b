= render "layouts/header"

.item-box-main-content
  %section.item-box-content
    %h1
      = "#{@category.category_name}の商品一覧"
    .item-category-list
      %section.item-category-box
        - @mens_category.each do |item|
          .items-box
            = link_to item_path(item.id) do
              -item.item_images.each.with_index do |image, i|
                - if i ==0
                  =image_tag image.image.url
                  - if item.buyer_id == nil
                  -else
                    .index-sold-out-badge
                  .item-box-body
                    .item-box-name
                      = item.name
                    .item-box-price
                      .price-section
                        ¥
                        = number_with_delimiter(item.price)
                      .item-liks
                        =fa_icon("heart")
                        %span 10
                      %p.item-tax (税込)
  .special-detail


= render "layouts/footer"
= render "layouts/sellbutton"

